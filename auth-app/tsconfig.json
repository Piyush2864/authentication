{
  "compilerOptions": {
    "target": "es2020",               // Modern target
    "module": "esnext",               // Enable ECMAScript modules
    "moduleResolution": "node",       // Resolve modules like Node.js
    "esModuleInterop": true,          // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",               // Optional: compiled JS output folder
    "rootDir": "./src",               // Optional: your source code directory
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true                 // Helpful for debugging
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
